  </Disable>
 </State>

 <State name="enableEditState" >
  <Enable>
   <Action name="edit_mode" />
  </Enable>
 </State>

   
 <State name="tabState" >
  <Enable>
   <Action name="rename_display" />
  </Enable>
 </State>

 <State name="noTabState" >
  <Disable>
   <Action name="rename_display" />
  </Disable>
 </State>

 <State name="datState" >
  <Enable>
   <Action name="waveforms"/>
  </Enable>
 </State>

 <State name="noDatState" >
  <Disable>
   <Action name="waveforms"/>
  </Disable>
 </State>


 <State name="clusterTabState" >
  <Enable>
   <Action name="edit_select_all_except01"/>
   <Action name="close_cluster_file" />
  </Enable>
  <Disable>
   <Action name="close_event_file" />
  </Disable>  
 </State>
 
 <State name="clusterState" >
  <Enable>
   <Action name="vertical_lines"/>
   <Action name="raster"/>
   <Action name="waveforms"/>
  </Enable>
 </State>

 <State name="noClusterState" >
  <Disable>
   <Action name="vertical_lines"/>
   <Action name="raster"/>
   <Action name="waveforms"/>
   <Action name="increase_raster_height"/>
   <Action name="decrease_raster_height"/>
   <Action name="show_next_cluster" />
   <Action name="show_previous_cluster" />
  </Disable>
 </State>

 <State name="noClusterBrowsingState" >
  <Disable>
   <Action name="show_next_cluster" />
   <Action name="show_previous_cluster" />
  </Disable>
 </State>

 <State name="clusterBrowsingState" >
  <Enable>
   <Action name="show_next_cluster" />
   <Action name="show_previous_cluster" />
  </Enable>
 </State>
 
 
 <State name="noClusterRasterState" >
  <Disable>
   <Action name="increase_raster_height"/>
   <Action name="decrease_raster_height"/>
  </Disable>
 </State>

 <State name="clusterRasterState" >
  <Enable>
   <Action name="increase_raster_height"/>
   <Action name="decrease_raster_height"/>
  </Enable>
 </State>
 
 
 <State name="eventState" >
  <Enable>
   <Action name="select_event" />
   <Action name="remove_event" />
