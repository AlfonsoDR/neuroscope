   <Action name="edit_redo" />   
   <Action name="show_events"/>
  </Disable>
 </State> 

 <State name="noEventBrowsingState" >
  <Disable>
   <Action name="show_next_event" />
   <Action name="show_previous_event" />
  </Disable>
 </State>

 <State name="eventBrowsingState" >
  <Enable>
   <Action name="show_next_event" />
   <Action name="show_previous_event" />
  </Enable>
 </State>
 
 <State name="positionState" >
  <Enable>
    <Action name="close_position_file" />
    <Action name="position_view"/>
  </Enable>
  <Disable>
   <Action name="load_position_file" />
  </Disable>
 </State>

 <State name="noPositionState" >
  <Enable>
    <Action name="load_position_file" />
  </Enable>
  <Disable>
   <Action name="close_position_file" />
   <Action name="position_view"/>
   <Action name="show_events"/>
  </Disable>
 </State>


 <State name="eventsInPositionViewEnableState" >
  <Enable>
   <Action name="show_events"/>
  </Enable>
 </State> 
  
 <State name="eventTabState" >
  <Enable>
   <Action name="close_event_file" />
   <Action name="add_event" />
   <Action name="add_event_toolbarAction" />
  </Enable>
  <Disable>
   <Action name="edit_select_all_except01"/>
   <Action name="close_cluster_file" />
  </Disable>  
 </State>
 

 <State name="undoState" >
  <Enable>
   <Action name="edit_undo" />
   <Action name="edit_redo" />
  </Enable>
 </State>

 <State name="emptyRedoState" >
  <Disable>
   <Action name="edit_redo" />
  </Disable>
 </State>

 <State name="emptyUndoState" >
  <Disable>
   <Action name="edit_undo" />
  </Disable>
  <Enable>
   <Action name="edit_redo" />
  </Enable>
 </State>
   
 <MenuBar>
  <Menu name="file" >
   <Action append="open_merge" name="load_cluster_files" />
   <Action append="open_merge" name="load_event_files" />
   <Action append="open_merge" name="create_event_file" />
   <Action append="open_merge" name="load_position_file" />
   <Action append="close_merge" name="close_cluster_file" />   
   <Action append="close_merge" name="close_event_file" />
   <Action append="close_merge" name="close_position_file" />
   <Separator/>
   <Action name="file_properties" />   
  </Menu>

  <Menu name="edit" >
   <Action append="edit\select_merge" name="edit_select_all_except01" />
   <Action append="edit\select_merge" name="edit_deselect_all" />
   <Separator/>
   <Action append="edit\select_merge" name="edit_mode" />
  </Menu>

  <Menu name="tools_menu" >
   <text>T&amp;ools</text>
   <Action name="zoom" />
   <Action name="draw_time_line" />
   <Action name="select" />
   <Action name="measure" />
   <Action name="time" />
   <Action name="select_event" />
   <Action name="add_event" />
  </Menu>

  <Menu name="channels_menu" >
   <text>&amp;Channels</text>
   <Action name="show_channels"/>
   <Action name="hide_channels"/>
   <Separator/>
   <Action name="create_group" />
   <Action name="discard_spike_channels"/>   
   <Action name="discard_channels"/>
   <Separator/>   
   <Action name="keep_channels" />
   <Action name="skip_channels" /> 
   <Separator/>   
   <Action name="synchronize" />   
   <Separator/> 
   <Action name="apply_display_color"/>
   <Action name="apply_spike_color"/>    
  </Menu>

  <Menu name="clusters_menu" >
   <text>&amp;Units</text>
    <Action name="vertical_lines"/>
    <Action name="raster"/>
    <Action name="waveforms"/>
    <Separator/> 
    <Action name="increase_raster_height"/>
    <Action name="decrease_raster_height"/>  
    <Separator/> 
    <Action name="show_next_cluster" />
    <Action name="show_previous_cluster" />
  </Menu>

  <Menu name="events_menu" >
   <text>E&amp;vents</text>
   <Action name="show_next_event" />
   <Action name="show_previous_event" />   
   <Action name="remove_event" />
  </Menu>

  <Menu name="positions_menu" >
   <text>&amp;Positions</text>
   <Action name="position_view"/>
   <Action name="show_events"/>
  </Menu>
  
  <Menu name="traces_menu" >
   <text>&amp;Traces</text>
    <Action name="display_mode"/>
    <Separator/>
    <Action name="grey_scale"/>
    <Separator/>
    <Action name="increase_all_channels"/>
    <Action name="decrease_all_channels"/>
    <Action name="increase_selected_channels"/>
    <Action name="decrease_selected_channels"/>
    <Action name="reset_gains" />
    <Separator/>    
    <Action name="reset_offsets" />
    <Separator/>
    <Action name="set_default_offsets" />
    <Action name="set_default_offsets_0" />
    <Separator/>
    <Action name="show_labels"/>     
  </Menu>

  <Menu name="displays_menu" >
   <text>&amp;Displays</text>
   <Action name="new_display" />
   <Action name="rename_display" />
   <Action name="close_display" />
  </Menu>


  <Menu name="settings" >
   <Action append="show_toolbar_merge" name="show_toolBar" />
   <Action append="show_toolbar_merge" name="show_parameterBar" />
   <Action append="save_merge" name="show_calibration" />
  </Menu>

 </MenuBar>

 <ToolBar name="mainToolBar" >
  <Action name="edit_mode" />
 </ToolBar>

 
 <ToolBar position="Left" name="toolBar" >
  <text>Tools</text>
  <Action name="zoom" />
  <Action name="draw_time_line" />
  <Action name="select" />
  <Action name="select_event" />
  <Action name="add_event_toolbarAction" />
  <Action name="measure" />
  <Action name="time" />
 </ToolBar>

 <ToolBar position="Left" name="channelBar" >
  <text>Channels Actions</text>
  <Action name="create_group" />
  <Action name="discard_spike_channels"/>
  <Action name="discard_channels"/>
  <Action name="keep_channels" />
  <Action name="skip_channels" />    
  <Action name="show_channels"/>
  <Action name="hide_channels"/> 
 </ToolBar>

 <ToolBar position="Left" name="eventBar" >
  <text>Events Actions</text>
   <Action name="show_previous_event" />
   <Action name="show_next_event" />
 </ToolBar>

<ToolBar position="Left" name="clusterBar" >
  <text>Clusters Actions</text>
   <Action name="show_previous_cluster" />
   <Action name="show_next_cluster" />
 </ToolBar>
  
 <ActionProperties/>
</kpartgui>
